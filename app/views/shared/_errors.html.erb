<% if resource.errors.present? %>
  <div>
    <h2><%= pluralize(resource.errors.count, 'error') %> detected:</h2>

    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <div class="alert alert-danger" role="alert">
          <li> <%= message %> </li>
        </div>
      <% end %>
    </ul>
  </div>
<% end %>
