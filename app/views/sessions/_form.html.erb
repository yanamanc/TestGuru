<%= form_with url: sessions_path, local: true do |form| %>

    <%= message(:alert) %>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :email, id: :password %>
  </p>

  <p>
    <%= form.submit 'Enter' %>
  </p>
<% end %>

<p>Not a member yet?
  <%= link_to 'Registration', signup_path %>
</p>
