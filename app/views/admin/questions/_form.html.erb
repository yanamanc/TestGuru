<h3><%= question_header(@question) %></h3>

<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <div class="form-group col-sm-6">
    <%= form.label :body %><br>
    <%= form.text_field :body, id: :question_body, class: 'form-control' %>
  </div>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', admin_test_path(@question.test), class: 'nav-link' %>
