<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <div class="form-group col-sm-6">
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :answer_body, class: 'form-control' %>
    </div>

    <div class="form-group col-sm-6">
    <%= form.label :correct %><br>
    <%= form.check_box :correct, id: :answer_correct %>
  </div>
  <p><%= form.submit %></p>
<% end %>
